---
import MainLayout from '../layouts/main.astro'

import { XataClient } from '../xata';

const xata = new XataClient({ apiKey: import.meta.env.XATA_API_KEY });
const records = await xata.db.Posts.getAll();
---

<MainLayout title="Get started with Xata and Astro">

		<div class="w-full max-w-5xl mt-16">
			<form>
				<input
					name="search"
					placeholder="Search..."
					class="w-full rounded-lg border-2 p-2 dark:text-purple-950"
				/>
			</form>
		</div>

		<div class="w-full max-w-5xl mt-16">
			{records.length === 0 && <p>No blog posts found</p>}
			{records.map((record) => (
				<div class="mb-16">
					<p class="text-xs mb-2 text-purple-950 dark:text-purple-200">{record.pubDate?.toDateString()}</p>
					<h2 class="text-2xl mb-2">
						<a href={`posts/${record.slug}`}>{record.title}</a>
					</h2>
					<p class="text-purple-950 dark:text-purple-200 mb-5">{record.description}</p>
					<a
						href={`posts/${record.slug}`}
						class="px-4 py-2 font-semibold text-sm bg-purple-700 text-white rounded-lg shadow-sm w-fit"
					>
						Read more &rarr;
					</a>
				</div>
			))}
		</div>
	
</MainLayout>
